<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding"
        card_view:cardCornerRadius="@dimen/cardCorner"
        android:background="@color/colorPrimary">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/idDisp"
                style="@style/styleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/paddingTop"
                android:paddingLeft="@dimen/paddingLeft"
                android:paddingRight="@dimen/paddingRight"
                android:paddingBottom="@dimen/paddingBelowText"
                />
            <TextView
                android:id="@+id/userIdDisp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/paddingLeft"
                android:paddingRight="@dimen/paddingRight"
                android:paddingBottom="@dimen/paddingBelowText"
                style="@style/styleText"
                />
            <TextView
                android:id="@+id/titleDisp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/paddingLeft"
                android:paddingRight="@dimen/paddingRight"
                android:paddingBottom="@dimen/paddingBelowText"
                style="@style/styleText"
                />
            <TextView
                android:id="@+id/bodyTextDisp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/paddingLeft"
                android:paddingRight="@dimen/paddingRight"
                android:paddingBottom="@dimen/paddingBottom"
                style="@style/styleText"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>